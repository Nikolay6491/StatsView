<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal" />

    <ru.netology.statsview.ui.StatsView
        android:id="@+id/statsView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:color1="@android:color/holo_green_light"
        app:color2="@android:color/holo_blue_light"
        app:color3="@android:color/holo_purple"
        app:color4="@android:color/holo_red_light"
        app:lineWidth="25dp"
        app:textSize="20sp">
    </ru.netology.statsview.ui.StatsView>
</LinearLayout>